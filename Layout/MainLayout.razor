@using GameStore.Shared.Components
@inherits LayoutComponentBase

<ProtectedView StorageKey="auth-token">
    <AuthorizedView>
        <div class="page">
            <div class="sidebar">
                <NavMenu userInfo="@context"/>
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </AuthorizedView>
    <UnauthorizedView>
        <RedirectToLogin/>
    </UnauthorizedView>
</ProtectedView>