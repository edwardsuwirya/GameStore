@attribute [Route(PageRoute.NewGame)]
@attribute [Route(PageRoute.Game + "/{id:int}")]
@using GameStore.Services
@using GameStore.Shared.Components
@using GameStore.Shared.Navigation
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject GetGameService GetGameService
@inject AddGameService AddGameService
@inject UpdateGameService UpdateGameService

<PageView Title="@title">
    <div class="row">
        <div class="col-sm-4">
            <EditForm Model="game" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator/>
                <ValidationSummary/>
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="game.Name" class="form-control"></InputText>
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre:</label>
                    <GenreSelection Id="genre" @bind-SelectedGenre="game.Genre"/>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <InputNumber id="price" @bind-Value="game.Price" class="form-control"></InputNumber>
                </div>
                <div class="mb-3">
                    <label for="releaseDate" class="form-label">Release Date:</label>
                    <InputDate id="releaseDate" @bind-Value="game.ReleaseDate" class="form-control"></InputDate>
                </div>
                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">Save</button>
                <button type="button" class="btn btn-secondary" @onclick="@Cancel" disabled="@isSubmitting">Cancel</button>
            </EditForm>
        </div>
    </div>
</PageView>