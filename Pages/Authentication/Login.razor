@using GameStore.Services
@using GameStore.Shared.Navigation
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Route(PageRoute.Login)]
@layout EmptyLayout
@inject LoginService LoginService;

<div class="d-flex justify-content-center">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Sign in to GameStore</h1>
        <div class="account-wall">
            <div class="form-signin">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">
                <EditForm Model="userAccessCredential" OnValidSubmit="HandleSubmit" style="margin-top: 64px">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>
                    <div class="mb-1">
                        <InputText id="name" placeholder="User Name" @bind-Value="userAccessCredential.UserName" class="form-control form-control-lg"></InputText>
                    </div>
                    <div class="mb-4">
                        <InputText id="password" placeholder="Password" @bind-Value="userAccessCredential.Password" type="password" class="form-control form-control-lg"></InputText>
                    </div>
                    <div class="d-grid">
                        <button type="button" class="btn btn-primary btn-lg" @onclick="HandleSubmit" disabled=@isLoading>Login</button>
                    </div>
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@error</div>
                    }
                </EditForm>

                <a href="#" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>
</div>