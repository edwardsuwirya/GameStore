@page "/Authentication/Login"
@using GameStore.Shared.States
@layout EmptyLayout
@inject IAccountService AccountService;
@inject AuthState AuthState;
<div class="row">
    <div class="col-sm-4">
        <EditForm Model="_userAccessCredential" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <div class="mb-3">
                <label for="name" class="form-label">User Name:</label>
                <InputText id="name" @bind-Value="_userAccessCredential.UserName" class="form-control"></InputText>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <InputText id="password" @bind-Value="_userAccessCredential.Password" type="password" class="form-control"></InputText>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </EditForm>
    </div>
</div>